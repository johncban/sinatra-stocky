<section class="frost-wide">
    <h1 class="text-success h5-m">
      EDIT PORTFOLIO NAME
    </h1>
</section>


<div class="frost">
    <h1 class="text-white">
      Current Portfolio Name: <%= @portfolio.portfolioname%>
    </h1>
    <hr>   
    <form  action="/portfolio/<%= @portfolio.id%>" method="post" >
    <input id="hidden" type="hidden" name="_method" value="PATCH">

      <div class="form-group">
        <input type="text" name="portfolioname" placeholder="Portfolio Name: " class="form-control rounded-0" id="form-name">
      </div>
      <hr>
      <div class="text-right">
        <button type="submit" class="btn btn-info rounded-0">Update Portfolio Name</button>
      </div>
    </form>
</div>



<!-- Modal Create Portfolio -->
<div class="modal fade" id="createPortfolioModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-0">
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Create Portfolio</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <!-- Modal body -->
      <form action="/portfolio" method="POST">
      <div class="modal-body">
        <div class="form-group">
          <input class="form-control rounded-0" name="portfolioname" type="text" placeholder="Create Portfolio Name"/>
        </div>
      </div>
      <!-- Modal footer -->
      <div class="modal-footer">
        <input type="submit" value="Submit" class="btn btn-outline-dark rounded-0"/>
      </div>
      </form>
    </div>
  </div>
</div>